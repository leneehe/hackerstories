  content = document.querySelector('#content'),
  body = document.querySelector('body'),
  viewmore = document.querySelector('#view-more'),
  viewlink = document.querySelector('#view-more a'),
  more = document.createElement('div')

more.innerHTML = "<%=j render(partial: 'story', collection: @stories, format: 'html') %>"
content.appendChild(more)

<% if @stories.current_page == @stories.total_pages %>
  body.removeChild(viewmore)
<% else %>
  viewlink.href = '<%= url_for(page: @stories.current_page + 1) %>'
<% end %>
